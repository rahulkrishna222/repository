<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>Grandmaster.com</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<!-- Servlet declarations -->
	<servlet>
		<servlet-name>feedbackProcessor</servlet-name>
		<servlet-class>com.grandmaster.web.action.FeedbackProcessorServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>


	<!-- URL Mappings -->

	<servlet-mapping>
		<servlet-name>feedbackProcessor</servlet-name>
		<url-pattern>/feedback/*</url-pattern>
	</servlet-mapping>

	<!-- Listner declaration -->
	<listener>
		<listener-class>com.grandmaster.listener.GrandmasterContextInitializer</listener-class>
	</listener>


</web-app>